{% extends "layout.twig" %}

{% block content %}

    <h2>Пользователь по ID</h2>
    <p class="row">

    {#{% for row in data %}#}
        <p>
        <h2>Ваш логин: {{ data.login }}</h2>
        <p>Электронная почта:<br> <a href="mailto:{{ data.email }}">{{ data.email }}</a></p>
        <p>Имя: {{ data.name }}</p>
        <p>Возраст: {{ data.age }}</p>
        <p>Аватар: <img src="{{ data.avatar }}"></p>
        </p>
    {#{% endfor %}#}

    <h2>Вставка записи в таблицу Users</h2>
    <div id="myForm">
        <form action="http://dz8.rest/user" method="post" enctype="multipart/form-data">
            <input type="text" name="login" id="login" placeholder="Логин" class="login" id="login" />
            <input type="text" name="name" id="name" placeholder="Имя" class="name" id="name" />
            <input type="email" name="email" id="email" placeholder="Email" class="email" id="email" />
            <input type="text" name="age" id="age" placeholder="Возраст" class="age" id="age" />
            <textarea type="text" rows="5" cols="50" name="about" id="about" placeholder="О себе" class="about" id="about"></textarea>
            {#<input type="file" name="avatar" id="avatar" />#}
            <input type="password" name="password" id="password" placeholder="Пароль" class="password" id="password" />
            <input type="hidden" name="action" value="create" />
            <input type="button" value="Запрос" class="btn_create" name="btn_create">
        </form>
    </div>

    <h2>Удаление записи по Id</h2>
    <div>
        <form id="myForm1" action="/user" method="post">
            <input type="text" id="id" name="id" placeholder="Введите ID пользователя" />
            <input type="hidden" name="action" value="delete" id="action">
            <input type="submit" value="Delete" class="btn_delete" name="btn_delete">
        </form>
    </div>

    <div id="data"></div>
{% endblock %}